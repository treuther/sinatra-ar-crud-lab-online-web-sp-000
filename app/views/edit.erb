<h1>Update Post</h1>

<form action="/articles/<%= @article.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Article Name: <input type="text" name="article[title]" value="<%= @article.title %>">
  <br>
  Article Content: <input type="text" name="article[content]" value="<%= @article.content %>">
  <input type="submit" value="submit changes">
</form>
